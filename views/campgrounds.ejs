<%- include("./partials/header") %>
<div class="container">
<header class="jumbotron">
    <div class="container">
    <h1>Welcome To YelpCamp!</h1>
    <p>View Our Handpicked campgrounds from all over the world</p>
    <p>
    <a class="btn btn-primary btn-large" href="/campgrounds/new">Add New Campgrounds</a>  
    </p>
</div>
</header>

<div class="row" style="display: flex; flex-wrap: wrap;">
   <div class="col-lg-12">
       <h3>Some of our best campgrounds</h3>
   </div>
   <% campgrounds.map(camps => {%>
    <div class="col-lg-3 col-md-6 col-sm-12">
        <div class="thumbnail">
     <div class="caption" style="text-align: center;">    
    <h4><%= camps.name %></h4>
    </div>   
    <img src="<%= camps.images %>" />
    </div>
    </div>
<% }) %>
</div>
</div>
<%- include("./partials/footer") %>